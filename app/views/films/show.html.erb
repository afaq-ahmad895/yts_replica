<%= link_to "Back To Index", films_index_path %>

<h1>Search Api Movies</h1>
<%= form_tag(root_path, method: :get) do %>
  <%= label_tag :movie_id, 'Enter Movie ID:' %>
  <%= text_field_tag :movie_id %>
  <%= submit_tag 'Search' %>
<% end %>

